/* pages/Angels/angels.wxss */
.container1 {
  position: relative;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #0b3731ec;
  height: 100%;
  padding-bottom: 0px;
}
.tree {
  background-size: cover;
  background-position: center;
  height: 2100rpx;
  margin-left: -350rpx;
  margin-top: 170rpx;
  position: absolute;
}
.title {
  color: #ffffff;
  font-size: 48rpx;
  margin-bottom: 0rpx;
  margin-top: 60rpx;
}
.content {
  padding: 0 40rpx;
}
.page-section{
  width: 100%;
  margin-top: 40rpx;
}
.page-section:last-child{
  margin-bottom: 0;
}
.swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.white-part{
  background-color: rgb(255, 255, 255);
  height: 1900rpx;
  width: 750rpx;
  position: relative;
  text-align: center;
}
.text-in-white {
  color: #0B3731;
  padding: 60rpx 60rpx;
  position: relative;
}
.h1 {
  font-size: 48rpx;
  padding: 40rpx 0;
}
.top-text {
  margin: 60rpx 0;
  text-align: center;
}
.deco-btn {
  border: 1px solid #0B3731;
  background: rgba(245, 244, 244, 0.055);
  color: #0B3731;
  font-size: 40rpx;
}
.deco-sector {
  padding-top: 60rpx;
}
.deco-text{
  margin-bottom: 30rpx;
}
.line-surround-white {
  position: relative;
  display: inline-block;
}

.line-surround-white::before, .line-surround-white::after {
  display: inline-block;
  content: "";
  border-top: 2rpx solid rgb(255, 255, 255);
  width: 75rpx;
  margin: -12rpx 16rpx;
  transform: translateY(-32rpx);
}
.line-surround-green {
  position: relative;
  display: inline-block;
}

.line-surround-green::before, .line-surround-green::after {
  display: inline-block;
  content: "";
  border-top: 2rpx solid #0B3731;
  width: 115rpx;
  margin: -12rpx 16rpx;
  transform: translateY(-32rpx);
}