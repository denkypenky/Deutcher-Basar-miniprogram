/* pages/landing/landing.wxss */
.container1 {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #0b3731ec;

}
.tree {
  background-size: cover;
  background-position: center;
  height: 1625rpx;
  width: 760rpx;
}
.small-text {
  color: #FAF6EB;
  text-align: center;
  font-size: 18px;
  text-transform: uppercase;
  margin-top: 40rpx;
}
.btn {
  margin-bottom: 10rpx;
}
.landing-img {
  width: 650rpx;
  height: 184rpx;
  flex-shrink: 0;
  margin-bottom: 0;
}
.btn-margin {
  margin-top: 100rpx;
}
.top-text {
  margin-top: 100rpx;
}
.qr-code bottom-text {
  margin-bottom: 360rpx;
}
.bottom-text{
  margin-top: 40rpx;
}
.yellow-text {
  color: #FDC01C;
  margin-bottom: 360rpx;
}
.countdown {
  display: flex;
  justify-content: center;
  align-items: center;
}

.countdown-section {
  text-align: center;
  margin-top: 40rpx;
  color: rgb(253, 253, 253);
}

.countdown-value {
  font-size: 32px;
  font-weight: bold;
}

.countdown-label {
  font-size: 16px;
  margin-top: 8px;
}